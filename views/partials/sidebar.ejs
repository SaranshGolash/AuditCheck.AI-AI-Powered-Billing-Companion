<div id="sidebar" class="glass-sidebar">
    <div class="sidebar-header">
        <h3>AuditCheck.AI</h3>
        <button onclick="toggleSidebar()" class="close-btn">&times;</button>
    </div>

    <ul class="sidebar-nav">
        <li>
            <a href="/">
                <i class="fas fa-home"></i> Home
            </a>
        </li>
        <li>
            <a href="/search">
                <i class="fas fa-calculator"></i> Price Calculator
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fas fa-hospital"></i> Hospital Directory
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fas fa-file-medical-alt"></i> Gov. Schemes
            </a>
        </li>
        <li>
            <a href="#">
                <i class="fas fa-info-circle"></i> About Us
            </a>
        </li>
    </ul>

    <div class="sidebar-footer">
        <% if(typeof user !== 'undefined' && user) { %>
            <div class="user-profile">
                <div class="avatar-circle">
                    <%= user.username.charAt(0).toUpperCase() %>
                </div>
                <div class="user-info">
                    <span><%= user.username %></span>
                    <a href="/logout" style="font-size: 0.8rem; color: #ef4444; padding:0; background:none;">Logout</a>
                </div>
            </div>
        <% } else { %>
            <div class="user-profile" onclick="window.location.href='/login'">
                <div class="avatar-circle">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <span>Login / Sign Up</span>
                </div>
            </div>
        <% } %>
    </div>
</div>

<div id="overlay" onclick="toggleSidebar()" class="sidebar-overlay"></div>