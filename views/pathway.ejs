<%- include('partials/header', { title: 'Your Care Pathway' }) %>

<div class="grid-container w-full max-w-6xl">
    
    <div class="glass-card gsap-left">
        <h2 class="text-2xl font-bold text-blue-900 border-b pb-2 mb-4"><%= procedure.name %></h2>
        
        <div class="flex justify-between items-center mb-4">
            <span class="text-gray-600">Avg Private Cost:</span>
            <span class="text-xl font-bold text-red-500">₹<%= procedure.avg_private_cost %></span>
        </div>
        <div class="flex justify-between items-center mb-4">
            <span class="text-gray-600">PM-JAY (Fair) Rate:</span>
            <span class="text-xl font-bold text-green-600">₹<%= procedure.pmjay_rate %></span>
        </div>

        <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-200 mt-4">
            <h3 class="font-bold text-yellow-800 mb-2"><i class="fas fa-exclamation-triangle"></i> Hidden Costs to Watch</h3>
            <ul class="list-disc pl-5 text-sm text-yellow-900">
                <% hidden_costs.forEach(cost => { %>
                    <li class="mb-1"><strong><%= cost.item_name %> (~₹<%= cost.avg_cost %>):</strong> <%= cost.description %></li>
                <% }) %>
            </ul>
        </div>
    </div>

    <div class="glass-card gsap-right flex flex-col">
        <div class="flex items-center gap-2 mb-4">
            <div class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center text-white"><i class="fas fa-robot"></i></div>
            <h3 class="text-xl font-bold text-blue-900">Ask AuditAI</h3>
        </div>
        
        <div id="chat-history" class="flex-grow bg-white/50 rounded-lg p-3 h-64 overflow-y-auto mb-3 border border-white/40 shadow-inner">
            <div class="text-sm text-gray-500 italic">Example: "Is the consumable charge justified?" or "How can I negotiate the bed charges?"</div>
        </div>

        <form id="ai-form" onsubmit="askAI(event)" class="flex gap-2">
            <input type="text" id="ai-input" 
                placeholder="Ask about these costs..." 
                class="flex-grow mb-0 bg-white/80 border border-gray-300 rounded-lg px-3 focus:ring-2 focus:ring-blue-500 outline-none" 
                autocomplete="off">
            
            <button type="submit" id="ai-btn" class="mb-0 w-auto px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-all shadow-md">
                <i class="fas fa-arrow-right"></i>
            </button>
        </form>
    </div>

</div>

<div class="glass-card mt-6 w-full max-w-6xl gsap-up">
    <h3 class="text-xl font-bold text-gray-800 mb-4">Recommended Hospitals</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% hospitals.forEach(hosp => { %>
            <div class="bg-white/40 p-4 rounded-xl border border-white/50 hover:bg-white/60 transition-colors">
                <h4 class="font-bold text-blue-800"><%= hosp.name %></h4>
                <p class="text-sm text-gray-600"><%= hosp.location %></p>
                <div class="flex justify-between mt-2 text-sm">
                    <span class="text-yellow-600">★ <%= hosp.rating %></span>
                    <% if(hosp.is_pmjay_empaneled) { %>
                        <span class="text-green-700 bg-green-100 px-2 rounded text-xs py-1 border border-green-200">PM-JAY Accepted</span>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script>
    // GSAP Animations
    if (typeof gsap !== 'undefined') {
        gsap.from(".gsap-left", { duration: 1, x: -50, opacity: 0, ease: "power2.out" });
        gsap.from(".gsap-right", { duration: 1, x: 50, opacity: 0, delay: 0.2, ease: "power2.out" });
        gsap.from(".gsap-up", { duration: 1, y: 50, opacity: 0, delay: 0.4, ease: "power2.out" });
    }

    // AI Logic
    async function askAI(event) {
        // Prevent form from reloading the page
        event.preventDefault();

        const input = document.getElementById('ai-input');
        const history = document.getElementById('chat-history');
        const btn = document.getElementById('ai-btn');
        const question = input.value;
        
        if(!question) return;

        // 1. Add User Message to Chat
        history.innerHTML += `
            <div class="text-right mb-2">
                <span class="bg-blue-100 text-blue-800 px-3 py-2 rounded-lg rounded-tr-none inline-block text-sm border border-blue-200">
                    ${question}
                </span>
            </div>`;
        
        // Clear input and scroll down
        input.value = '';
        history.scrollTop = history.scrollHeight;

        // 2. Set Button to Loading State
        const originalIcon = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
        btn.disabled = true;

        // 3. Prepare Context for Backend
        const contextData = {
            procedure: "<%= procedure.name %>",
            price_private: "<%= procedure.avg_private_cost %>",
            price_fair: "<%= procedure.pmjay_rate %>",
            hidden_costs: <%- JSON.stringify(hidden_costs) %>
        };

        try {
            // 4. Hit the API Endpoint
            const res = await fetch('/api/ask-ai', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ question, contextData })
            });
            const data = await res.json();
            
            // 5. Add AI Response to Chat
            history.innerHTML += `
                <div class="text-left mb-2">
                    <span class="bg-white text-gray-800 border border-gray-200 px-3 py-2 rounded-lg rounded-tl-none inline-block text-sm shadow-sm">
                        <strong class="text-blue-600 block mb-1 text-xs">AuditAI</strong>
                        ${data.answer}
                    </span>
                </div>`;
            
            history.scrollTop = history.scrollHeight;

        } catch (err) {
            console.error(err);
            history.innerHTML += `<div class="text-center text-red-500 text-xs mt-2">Error connecting to AI. Try again.</div>`;
        } finally {
            // 6. Restore Button State
            btn.innerHTML = originalIcon;
            btn.disabled = false;
            // Refocus input for next question
            input.focus(); 
        }
    }
</script>

<%- include('partials/footer') %>